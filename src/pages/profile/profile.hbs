{{#>Page}}
    {{#>FullscreenForm}}
        {{>Caption text=caption}}
        {{#if avatar}}
            {{>ProfileAvatar src=avatar.src alt=avatar.username}}
        {{/if}}
        {{#>Profile}}
            {{>ProfileFieldset fields=fields}}
            {{>ProfileButtons buttons=buttons}}
        {{/Profile}}
    {{/FullscreenForm}}
{{/Page}}