{{#Page}}
    {{#FullscreenForm back="profile"}}
        {{{Caption text=caption}}}
        {{#if errorText}}
            {{{Text align="center" text=errorText error="true"}}}
        {{/if}}
        {{#Profile}}
            {{#ProfileFieldset}}
                {{{ProfileField field=oldPasswordField ref="oldPassword"}}}
                {{{ProfileField field=newPasswordField ref="newPassword"}}}
                {{{ProfileField field=newPasswordRepeatField ref="newPasswordRepeat"}}}
            {{/ProfileFieldset}}
            {{#ProfileButtons}}
                {{{Button name=submitButton.name page=submitButton.page label=submitButton.label onClick=onSubmit}}}
            {{/ProfileButtons}}
        {{/Profile}}
    {{/FullscreenForm}}
{{/Page}}
